<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <ImageView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhotos"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout" />

    <TextView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New Text"
        android:drawableLeft="@drawable/heart"
        android:textColor="#1a75ff"
        android:id="@+id/tvLikes"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPhotos" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvUsername"
        android:textColor="#1a75ff"
        android:textStyle="bold"
        android:layout_below="@+id/tvLikes"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLength="11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#1a75ff"
        android:text="likes"
        android:layout_marginLeft="3dp"
        android:id="@+id/textView"
        android:layout_below="@+id/ivPhotos"
        android:layout_toEndOf="@+id/tvLikes" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvCaption"
        android:scrollHorizontally="false"

        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:autoText="false"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/textView"
        android:textSize="12dp"
        android:layout_alignParentStart="false"
        android:lines="3"
        android:layout_alignTop="@+id/tvUsername" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:id="@+id/ivProfile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvUsername1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#1a75ff"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/Created_Time"
        android:gravity="right"
        android:layout_below="@+id/ivPhotos"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/cmtlow"
        android:layout_marginTop="86dp"
        android:textColor="#1a75ff"
        android:layout_below="@+id/tvUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:maxLines="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/cmtlow1"
        android:layout_below="@+id/cmtlow"
        android:textColor="#1a75ff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:maxLines="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all comments"
        android:id="@+id/textView2"
        android:clickable="true"
        android:layout_marginRight="5dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_above="@+id/cmtlow1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

</RelativeLayout>